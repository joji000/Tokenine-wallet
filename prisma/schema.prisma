generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  providerId    String   @db.Uuid
  walletAddress String?
  email         String?
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}
